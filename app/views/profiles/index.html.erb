<h2>Top Athletes</h2>

<%= simple_form_for(:search, html: { url: profiles_path, method: 'get' }) do |f| %>
  <h4> Select Sport Played </h4></br>

  <%= f.input :sport,
    collection: @sports,
    prompt: "Select a Sport",
    label: "Sport:",
    selected: (params[:search][:sport] if params[:search]) %>

   <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



 <div class="row">
  <% @profiles.each_slice(3) do |slice| %>
  <% slice.each do |profile| %>

  <div class="span2">
    <p><%=link_to(profile) do %><%= image_tag profile.avatar.url(:small ) %></p>
    <% end %>
    <p><%= profile.username %> </p>
    <p><%= profile.sport %> | <%= profile.position %></p>
    </div>
    <% end %>
</div>
<% end %>








