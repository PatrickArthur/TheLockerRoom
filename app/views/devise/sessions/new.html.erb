<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
  <div class="row">
    <div class="col-sm-2">
    </div>

    <div class="col-sm-8">
      <div class="signcol">
      <h3>Search!!!</h3>
      <h3>Connect!!!</h3>
      <h2>Compete!!!</h>
      </div>
      <div class="signcol">
      <h5><%= f.label :email %></h5>
      </div>
      <p><%= f.input :email, required: false, autofocus: true, label: false, input_html: { class: 'span3' }  %></p>

      <div class="signcol">
      <h5><%= f.label :password %></h5>
      </div>
      <p><%= f.input :password ,required: false, label: false , input_html: { class: 'span3' }%></p>

    <div class="row">
      <div class="col-sm-6">
      <%= f.submit "Sign in" %>
    </div>
    <div class="col-sm-6">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    </div>
  </div>

  <div class="col-sm-2">
    </div>

  </div>


<% end %>
</div>
